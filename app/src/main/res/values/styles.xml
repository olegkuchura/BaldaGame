<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyTextButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyTextButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyTextButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyTextButtonStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_close</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>

    <style name="MyTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>

    <style name="MyEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="ButtonStyleTextColor">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="MyButtonStyle.MainMenuButton">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="ChipPlayer" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="ChipScore" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grayDark2</item>
    </style>

</resources>
